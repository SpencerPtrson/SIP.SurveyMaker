<UserControl x:Class="SIP.SurveyMaker.WPFUI.ucMaintainQA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIP.SurveyMaker.WPFUI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="260">
    <Grid>
        <ComboBox
            x:Name="cboText"
            Margin="25,0,0,0"
            Width="187"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>
        <Image
            x:Name="imgDelete"
            Width="28"
            Margin="217,4,0,4"
            Stretch="Fill"
            HorizontalAlignment="Left" 
            Source="/delete.jpg"
            MouseLeftButtonDown="imgDelete_MouseLeftButtonDown"
            />
        <RadioButton
            x:Name="rbIsCorrect"
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="5,0,0,0" 
            />

    </Grid>
</UserControl>
